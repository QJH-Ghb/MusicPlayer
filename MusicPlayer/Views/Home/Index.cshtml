@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Music Player</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background: radial-gradient(circle at top, #141E30, #243B55);
            color: #fff;
            overflow-x: hidden;
        }

        nav {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
            padding: 10px 0;
        }

        .nav-link {
            color: #fff !important;
            font-weight: bold;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #9bc9ff !important;
                text-shadow: 0 0 10px rgba(155, 201, 255, 0.7);
            }

        .tm-welcome-container {
            text-align: center;
            margin-top: 100px;
        }

        .tm-fa-big {
            font-size: 80px;
            color: #a8c0ff;
            text-shadow: 0 0 20px rgba(168, 192, 255, 0.6);
        }

        h1.tm-site-name {
            margin-top: 20px;
            font-size: 40px;
            color: #d7e3ff;
            text-shadow: 0 0 15px rgba(168, 192, 255, 0.6);
        }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-size: 18px;
            color: white;
            transition: 0.3s;
            margin-top: 20px;
        }

            .btn-primary:hover {
                transform: scale(1.1);
                box-shadow: 0 0 15px rgba(168, 192, 255, 0.8);
            }

        .album-section {
            margin: 80px auto;
            max-width: 1100px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 25px;
            padding: 0 20px;
        }

        .album {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            transition: 0.3s;
        }

            .album:hover {
                transform: scale(1.05);
            }

            .album img {
                width: 100%;
                height: 350px;
                object-fit: cover;
                filter: brightness(85%);
                transition: 0.3s;
            }

            .album:hover img {
                filter: brightness(100%);
            }

        .album-info {
            position: absolute;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            width: 100%;
            padding: 10px;
            text-align: center;
        }

            .album-info h3 {
                margin: 0;
                font-size: 18px;
                color: #a8c0ff;
            }

        footer {
            text-align: center;
            padding: 30px 0;
            font-size: 14px;
            color: #aaa;
            background: rgba(255, 255, 255, 0.05);
            margin-top: 80px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-sm">
        <div class="container">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Search">Search</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="PlayList">PlayList</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Usercolumn">Usercolumn</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Login">Login</a></li>

            </ul>
        </div>
    </nav>

    <div class="tm-welcome-container">
        <i class="fas fa-music tm-fa-big"></i>
        <h1 class="tm-site-name">Welcome to Music Player</h1>
        <a asp-controller="Home" asp-action="PlayList" class="btn btn-primary">🎧 開始播放音樂</a>
    </div>

    <section class="album-section">
        <div class="album">
            <img src="~/img/IU.jpg" alt="Album 1">
            <div class="album-info">
                <h3>First Album</h3>
            </div>
        </div>
        <div class="album">
            <img src="~/img/GD.jpg" alt="Album 2">
            <div class="album-info">
                <h3>Album Two</h3>
            </div>
        </div>
        <div class="album">
            <img src="~/img/Henry.jpg" alt="Album 3">
            <div class="album-info">
                <h3>Third Album</h3>
            </div>
        </div>
        <div class="album">
            <img src="~/img/Crowd_Lu.jpg" alt="Album 4">
            <div class="album-info">
                <h3>Album Four</h3>
            </div>
        </div>
        <div class="album">
            <img src="~/img/YanRenZhong.jpg" alt="Album 5">
            <div class="album-info">
                <h3>Album Five</h3>
            </div>
        </div>
        <div class="album">
            <img src="~/img/jokerxue.jpg" alt="Album 6">
            <div class="album-info">
                <h3>Album Six</h3>
            </div>
        </div>
    </section>

    <footer>
        <p>© 2025 Music Player | Enjoy Your Music 🎶</p>
    </footer>

</body>
</html>
